{%- comment -%}
  科幻主题密码页面
  在商店维护期间显示，保持科幻美学
{%- endcomment -%}

<div class="password-page">
  <!-- 密码页面头部 -->
  <div class="password-header">
    <div class="container">
      <div class="password-logo">
        {%- if settings.logo != blank -%}
          <img src="{{ settings.logo | image_url: width: 300, height: 100 }}"
               alt="{{ shop.name | escape }}"
               class="password-logo-img"
               loading="lazy">
        {%- else -%}
          <h1 class="password-logo-text scifi-gradient-text">{{ shop.name }}</h1>
        {%- endif -%}
      </div>

      <!-- 密码登录表单 -->
      <div class="password-login">
        <button type="button" class="password-toggle btn btn-ghost" data-password-toggle>
          <svg class="btn__icon" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
            <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
          </svg>
          {{ 'general.password_page.login_button' | t }}
        </button>
      </div>
    </div>
  </div>

  <!-- 密码页面主要内容 -->
  <div class="password-main">
    <div class="container">
      <div class="password-content">
        <!-- 欢迎信息 -->
        <div class="password-welcome">
          <h2 class="password-title">
            {%- if section.settings.title != blank -%}
              {{ section.settings.title }}
            {%- else -%}
              {{ 'general.password_page.opening_soon' | t }}
            {%- endif -%}
          </h2>

          <div class="password-description">
            {%- if section.settings.description != blank -%}
              {{ section.settings.description }}
            {%- else -%}
              <p>{{ 'general.password_page.opening_soon_subtitle' | t }}</p>
            {%- endif -%}
          </div>

          <!-- 邮箱订阅表单 -->
          {%- if section.settings.show_newsletter -%}
            <div class="password-newsletter">
              <h3 class="newsletter-title">{{ 'general.password_page.signup_form_heading' | t }}</h3>
              <form class="password-form" action="/contact#ContactFooter" method="post" id="ContactFooter" accept-charset="UTF-8">
                <input type="hidden" name="form_type" value="customer">
                <input type="hidden" name="utf8" value="✓">
                <input type="hidden" name="contact[tags]" value="prospect, password page">

                <div class="password-form-row">
                  <div class="password-field">
                    <input type="email"
                           name="contact[email]"
                           id="Email"
                           class="password-input"
                           placeholder="{{ 'general.password_page.signup_form_email_placeholder' | t }}"
                           value="{% if form.email %}{{ form.email }}{% endif %}"
                           required>
                    <button type="submit" class="password-submit btn btn-primary">
                      {{ 'general.password_page.signup_form_submit' | t }}
                    </button>
                  </div>
                </div>

                {%- if form.posted_successfully? -%}
                  <div class="password-form-message password-form-success">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    {{ 'general.password_page.signup_form_success' | t }}
                  </div>
                {%- endif -%}

                {%- if form.errors -%}
                  <div class="password-form-message password-form-error">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                    {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
                  </div>
                {%- endif -%}
              </form>
            </div>
          {%- endif -%}

          <!-- 社交媒体链接 -->
          {%- if section.settings.show_social_media -%}
            <div class="password-social">
              <h4 class="social-title">{{ 'general.password_page.spread_the_word' | t }}</h4>
              <div class="social-links-password">
                {%- if settings.social_twitter_link != blank -%}
                  <a href="{{ settings.social_twitter_link }}" class="social-link-password" target="_blank" rel="noopener">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"/>
                    </svg>
                  </a>
                {%- endif -%}

                {%- if settings.social_facebook_link != blank -%}
                  <a href="{{ settings.social_facebook_link }}" class="social-link-password" target="_blank" rel="noopener">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M20 10C20 4.477 15.523 0 10 0S0 4.477 0 10c0 4.991 3.657 9.128 8.438 9.879v-6.988h-2.54V10h2.54V7.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V10h2.773l-.443 2.89h-2.33v6.988C16.343 19.129 20 14.99 20 10z" clip-rule="evenodd"/>
                    </svg>
                  </a>
                {%- endif -%}

                {%- if settings.social_instagram_link != blank -%}
                  <a href="{{ settings.social_instagram_link }}" class="social-link-password" target="_blank" rel="noopener">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"/>
                    </svg>
                  </a>
                {%- endif -%}
              </div>
            </div>
          {%- endif -%}
        </div>

        <!-- 倒计时 -->
        {%- if section.settings.show_countdown and section.settings.countdown_date != blank -%}
          <div class="password-countdown">
            <h3 class="countdown-title">{{ 'general.password_page.countdown_heading' | t }}</h3>
            <div class="countdown-timer" data-countdown="{{ section.settings.countdown_date | date: '%Y-%m-%dT%H:%M:%S' }}">
              <div class="countdown-block">
                <div class="countdown-number" data-countdown-days>00</div>
                <div class="countdown-label">{{ 'general.countdown.days' | t }}</div>
              </div>
              <div class="countdown-block">
                <div class="countdown-number" data-countdown-hours>00</div>
                <div class="countdown-label">{{ 'general.countdown.hours' | t }}</div>
              </div>
              <div class="countdown-block">
                <div class="countdown-number" data-countdown-minutes>00</div>
                <div class="countdown-label">{{ 'general.countdown.minutes' | t }}</div>
              </div>
              <div class="countdown-block">
                <div class="countdown-number" data-countdown-seconds>00</div>
                <div class="countdown-label">{{ 'general.countdown.seconds' | t }}</div>
              </div>
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>

  <!-- 密码登录模态框 -->
  <div class="password-modal-overlay" id="password-modal" aria-hidden="true">
    <div class="password-modal">
      <div class="password-modal-content">
        <button type="button" class="password-modal-close btn btn-icon btn-ghost" data-password-close>
          <svg class="btn__icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>

        <div class="password-modal-header">
          <h3 class="modal-title">{{ 'general.password_page.login_modal_heading' | t }}</h3>
          <p class="modal-subtitle">{{ 'general.password_page.login_modal_subheading' | t }}</p>
        </div>

        <div class="password-modal-body">
          <form class="password-login-form" action="/password" method="post" id="login_form" accept-charset="UTF-8">
            <input type="hidden" name="utf8" value="✓">
            <input type="hidden" name="form_type" value="storefront_password">

            <div class="password-field-modal">
              <label for="Password" class="password-label">{{ 'general.password_page.login_form_password_label' | t }}</label>
              <input type="password"
                     name="password"
                     id="Password"
                     class="password-input-modal"
                     autocomplete="current-password"
                     required
                     placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}">
            </div>

            <button type="submit" class="password-login-submit btn btn-primary btn-full">
              {{ 'general.password_page.login_form_submit' | t }}
            </button>
          </form>

          {%- if form.errors -%}
            <div class="password-error-message">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>

  <!-- 背景效果 -->
  <div class="password-background">
    <div class="password-grid"></div>
    <div class="floating-particles">
      <div class="particle particle-1"></div>
      <div class="particle particle-2"></div>
      <div class="particle particle-3"></div>
      <div class="particle particle-4"></div>
      <div class="particle particle-5"></div>
    </div>
  </div>
</div>

<style>
/* 密码页面基础样式 */
.password-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, var(--color-bg-dark) 0%, #1a1a2e 50%, var(--color-bg-dark) 100%);
  color: var(--color-text-primary);
  position: relative;
  overflow: hidden;
}

/* 密码页面头部 */
.password-header {
  padding: var(--spacing-6) 0;
  position: relative;
  z-index: 10;
}

.password-logo {
  text-align: center;
  margin-bottom: var(--spacing-4);
}

.password-logo-img {
  max-width: 300px;
  height: auto;
  filter: drop-shadow(0 0 20px var(--glow-primary));
}

.password-logo-text {
  font-family: var(--font-family-heading);
  font-size: var(--font-size-4xl);
  font-weight: var(--font-weight-bold);
  margin: 0;
  text-shadow: 0 0 25px var(--glow-secondary);
}

.password-login {
  text-align: center;
}

/* 密码页面主要内容 */
.password-main {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-8) 0;
  position: relative;
  z-index: 10;
}

.password-content {
  max-width: 600px;
  text-align: center;
}

/* 欢迎信息 */
.password-welcome {
  margin-bottom: var(--spacing-12);
}

.password-title {
  font-family: var(--font-family-heading);
  font-size: var(--font-size-4xl);
  font-weight: var(--font-weight-bold);
  margin-bottom: var(--spacing-6);
  color: var(--color-secondary);
  text-shadow: 0 0 20px var(--glow-primary);
  line-height: var(--line-height-tight);
}

.password-description {
  font-size: var(--font-size-lg);
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-8);
  line-height: var(--line-height-relaxed);
}

/* 邮箱订阅表单 */
.password-newsletter {
  margin-bottom: var(--spacing-10);
}

.newsletter-title {
  font-family: var(--font-family-heading);
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  margin-bottom: var(--spacing-6);
  color: var(--color-text-primary);
}

.password-form-row {
  max-width: 400px;
  margin: 0 auto;
}

.password-field {
  display: flex;
  background: rgba(255, 255, 255, 0.05);
  border: 2px solid rgba(135, 206, 235, 0.3);
  border-radius: var(--radius-xl);
  overflow: hidden;
  transition: all var(--duration-normal) var(--ease-sci-fi);

  &:focus-within {
    border-color: var(--color-secondary);
    box-shadow: 0 0 20px var(--glow-primary);
  }
}

.password-input {
  flex: 1;
  padding: var(--spacing-4);
  background: transparent;
  border: none;
  color: var(--color-text-primary);
  font-size: var(--font-size-base);
  outline: none;

  &::placeholder {
    color: var(--color-text-light);
  }
}

.password-submit {
  flex-shrink: 0;
  @include scifi-button();
}

.password-form-message {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
  margin-top: var(--spacing-4);
  padding: var(--spacing-3);
  border-radius: var(--radius-base);
  font-size: var(--font-size-sm);
}

.password-form-success {
  background: rgba(40, 167, 69, 0.2);
  color: #90ee90;
  border: 1px solid rgba(40, 167, 69, 0.4);
}

.password-form-error {
  background: rgba(220, 53, 69, 0.2);
  color: #ff9a9a;
  border: 1px solid rgba(220, 53, 69, 0.4);
}

/* 社交媒体链接 */
.password-social {
  margin-bottom: var(--spacing-10);
}

.social-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-medium);
  margin-bottom: var(--spacing-6);
  color: var(--color-text-primary);
}

.social-links-password {
  display: flex;
  justify-content: center;
  gap: var(--spacing-4);
}

.social-link-password {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 48px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(135, 206, 235, 0.3);
  border-radius: var(--radius-full);
  color: var(--color-text-light);
  text-decoration: none;
  transition: all var(--duration-normal) var(--ease-sci-fi);

  &:hover {
    background: var(--color-secondary);
    color: var(--color-bg-dark);
    border-color: var(--color-secondary);
    transform: translateY(-3px);
    box-shadow: 0 6px 20px var(--glow-primary);
  }
}

/* 倒计时 */
.password-countdown {
  margin-bottom: var(--spacing-10);
}

.countdown-title {
  font-family: var(--font-family-heading);
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  margin-bottom: var(--spacing-6);
  color: var(--color-text-primary);
}

.countdown-timer {
  display: flex;
  justify-content: center;
  gap: var(--spacing-4);
}

.countdown-block {
  text-align: center;
  min-width: 80px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(135, 206, 235, 0.3);
  border-radius: var(--radius-lg);
  padding: var(--spacing-4);
  transition: all var(--duration-normal) var(--ease-sci-fi);

  &:hover {
    background: rgba(135, 206, 235, 0.1);
    border-color: var(--color-secondary);
    transform: translateY(-2px);
  }
}

.countdown-number {
  font-family: var(--font-family-heading);
  font-size: var(--font-size-3xl);
  font-weight: var(--font-weight-bold);
  color: var(--color-secondary);
  text-shadow: 0 0 10px var(--glow-primary);
  line-height: 1;
  margin-bottom: var(--spacing-2);
}

.countdown-label {
  font-size: var(--font-size-sm);
  color: var(--color-text-light);
  text-transform: uppercase;
  letter-spacing: var(--letter-spacing-wide);
}

/* 密码登录模态框 */
.password-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: var(--z-modal-backdrop);
  opacity: 0;
  visibility: hidden;
  transition: all var(--duration-normal) var(--ease-sci-fi);
}

.password-modal-overlay.active {
  opacity: 1;
  visibility: visible;
}

.password-modal {
  position: relative;
  max-width: 400px;
  width: 90%;
  background: var(--color-bg-dark);
  border: 1px solid rgba(135, 206, 235, 0.3);
  border-radius: var(--radius-xl);
  padding: var(--spacing-8);
  transform: scale(0.8);
  transition: transform var(--duration-normal) var(--ease-sci-fi);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
}

.password-modal-overlay.active .password-modal {
  transform: scale(1);
}

.password-modal-close {
  position: absolute;
  top: var(--spacing-4);
  right: var(--spacing-4);
  color: var(--color-text-light);
  opacity: 0.7;

  &:hover,
  &:focus {
    color: var(--color-text-primary);
    opacity: 1;
  }
}

.password-modal-header {
  text-align: center;
  margin-bottom: var(--spacing-8);
}

.modal-title {
  font-family: var(--font-family-heading);
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  margin-bottom: var(--spacing-3);
  color: var(--color-secondary);
}

.modal-subtitle {
  color: var(--color-text-secondary);
  margin: 0;
}

.password-modal-body {
  margin-bottom: var(--spacing-6);
}

.password-field-modal {
  margin-bottom: var(--spacing-6);
}

.password-label {
  display: block;
  margin-bottom: var(--spacing-2);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-primary);
}

.password-input-modal {
  width: 100%;
  padding: var(--spacing-4);
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(135, 206, 235, 0.3);
  border-radius: var(--radius-lg);
  color: var(--color-text-primary);
  font-size: var(--font-size-base);
  transition: all var(--duration-normal) var(--ease-sci-fi);

  &:focus {
    outline: none;
    border-color: var(--color-secondary);
    box-shadow: 0 0 0 2px var(--glow-secondary);
  }

  &::placeholder {
    color: var(--color-text-light);
  }
}

.password-login-submit {
  @include scifi-button();
}

.password-error-message {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
  padding: var(--spacing-3);
  background: rgba(220, 53, 69, 0.2);
  color: #ff9a9a;
  border: 1px solid rgba(220, 53, 69, 0.4);
  border-radius: var(--radius-base);
  font-size: var(--font-size-sm);
}

/* 背景效果 */
.password-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
}

.password-grid {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image:
    linear-gradient(rgba(135, 206, 235, 0.1) 1px, transparent 1px),
    linear-gradient(90deg, rgba(135, 206, 235, 0.1) 1px, transparent 1px);
  background-size: 80px 80px;
  animation: grid-move 15s linear infinite;
}

@keyframes grid-move {
  0% { transform: translate(0, 0); }
  100% { transform: translate(80px, 80px); }
}

.floating-particles {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.particle {
  position: absolute;
  border-radius: 50%;
  background: var(--color-secondary);
  opacity: 0.3;
  animation: float-particle linear infinite;
}

.particle-1 {
  width: 6px;
  height: 6px;
  top: 10%;
  left: 10%;
  animation-duration: 8s;
  animation-delay: 0s;
}

.particle-2 {
  width: 4px;
  height: 4px;
  top: 60%;
  left: 20%;
  animation-duration: 12s;
  animation-delay: 2s;
}

.particle-3 {
  width: 8px;
  height: 8px;
  top: 30%;
  right: 15%;
  animation-duration: 10s;
  animation-delay: 4s;
}

.particle-4 {
  width: 3px;
  height: 3px;
  top: 70%;
  right: 25%;
  animation-duration: 15s;
  animation-delay: 6s;
}

.particle-5 {
  width: 5px;
  height: 5px;
  bottom: 20%;
  left: 50%;
  animation-duration: 11s;
  animation-delay: 8s;
}

@keyframes float-particle {
  0% {
    transform: translateY(0) translateX(0);
    opacity: 0;
  }
  10% {
    opacity: 0.3;
  }
  90% {
    opacity: 0.3;
  }
  100% {
    transform: translateY(-100vh) translateX(50px);
    opacity: 0;
  }
}

/* 响应式设计 */
@media (max-width: 768px) {
  .password-title {
    font-size: var(--font-size-2xl);
  }

  .password-description {
    font-size: var(--font-size-base);
  }

  .countdown-timer {
    flex-wrap: wrap;
    gap: var(--spacing-3);
  }

  .countdown-block {
    min-width: 70px;
    padding: var(--spacing-3);
  }

  .countdown-number {
    font-size: var(--font-size-2xl);
  }

  .password-modal {
    margin: var(--spacing-4);
    padding: var(--spacing-6);
  }

  .password-background {
    transform: scale(1.2);
  }
}

/* 减少动画 */
@media (prefers-reduced-motion: reduce) {
  .password-grid,
  .particle {
    animation: none;
  }

  .password-modal-overlay,
  .password-modal,
  .social-link-password {
    transition: none;
  }
