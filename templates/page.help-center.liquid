{% comment %}
  帮助中心页面模板
  提供完整的帮助文档、FAQ、联系支持等功能
{% endcomment %}

<div class="help-center">
  <!-- 页面头部 -->
  <header class="help-center__header">
    <div class="container">
      <nav class="breadcrumb" aria-label="Breadcrumb">
        <ol>
          <li><a href="{{ routes.root_url }}">{{ 'general.breadcrumbs.home' | t }}</a></li>
          <li aria-current="page">{{ 'help_center.title' | t }}</li>
        </ol>
      </nav>

      <div class="help-center__hero">
        <h1 class="help-center__title">{{ page.title | default: '帮助中心' }}</h1>
        <p class="help-center__description">{{ page.content | strip_html | truncate: 200 | default: '我们随时为您提供帮助和支持' }}</p>

        <!-- 搜索框 -->
        <div class="help-center__search">
          <form action="{{ routes.search_url }}" method="get" class="help-search-form">
            <input type="hidden" name="type" value="page,article">
            <div class="help-search__wrapper">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor" class="help-search__icon">
                <circle cx="8" cy="8" r="6" stroke="currentColor" stroke-width="2" fill="none"/>
                <path d="M13 13l5 5" stroke="currentColor" stroke-width="2" fill="none"/>
              </svg>
              <input type="search"
                     name="q"
                     placeholder="{{ 'help_center.search_placeholder' | t }}"
                     class="help-search__input"
                     aria-label="{{ 'help_center.search_help' | t }}">
              <button type="submit" class="help-search__button">
                {{ 'help_center.search' | t }}
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </header>

