{%- comment -%}
  科幻主题 404 错误页面
  设计独特的未找到页面，保持科幻风格
{%- endcomment -%}

<div class="page-404">
  <div class="container">
    <div class="page-404-content">
      <!-- 错误代码显示 -->
      <div class="error-code">
        <div class="error-number error-number-4">4</div>
        <div class="error-number error-number-0">0</div>
        <div class="error-number error-number-4">4</div>
      </div>

      <!-- 错误信息 -->
      <div class="error-content">
        <h1 class="error-title">页面未找到</h1>
        <p class="error-description">
          抱歉，您访问的页面不存在或已被移除。<br>
          请尝试搜索或浏览以下链接找到您需要的内容。
        </p>

        <!-- 搜索表单 -->
        <div class="error-search">
          <form action="{{ routes.search_url }}" method="get" role="search" class="search-form-404">
            <div class="search-field-404">
              <input type="search"
                     name="q"
                     value="{{ search.terms | escape }}"
                     placeholder="搜索您想要的内容..."
                     class="search-input-404"
                     aria-label="搜索内容">
              <button type="submit" class="search-btn-404 btn btn-primary">
                搜索
              </button>
            </div>
          </form>
        </div>

        <!-- 快速链接 -->
        <div class="error-links">
          <h3 class="links-title">快速导航</h3>
          <div class="links-grid">
            <a href="{{ routes.root_url }}" class="link-card">
              <div class="link-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                  <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
              </div>
              <span>首页</span>
            </a>

            <a href="{{ routes.all_products_collection_url }}" class="link-card">
              <div class="link-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                  <line x1="7" y1="7" x2="7.01" y2="7"></line>
                </svg>
              </div>
              <span>商店</span>
            </a>

            <a href="{{ routes.collections_url }}" class="link-card">
              <div class="link-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="3" width="7" height="7"></rect>
                  <rect x="14" y="3" width="7" height="7"></rect>
                  <rect x="14" y="14" width="7" height="7"></rect>
                  <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
              </div>
              <span>分类</span>
            </a>

            {%- if blog -%}
              <a href="{{ blog.url }}" class="link-card">
                <div class="link-icon">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                    <line x1="16" y1="13" x2="8" y2="13"></line>
                    <line x1="16" y1="17" x2="8" y2="17"></line>
                    <polyline points="10 9 9 9 8 9"></polyline>
                  </svg>
                </div>
                <span>博客</span>
              </a>
            {%- endif -%}

            <a href="{{ routes.account_url }}" class="link-card">
              <div class="link-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                  <circle cx="12" cy="7" r="4"></circle>
                </svg>
              </div>
              <span>账户</span>
            </a>

            <a href="{{ routes.contact_url }}" class="link-card">
              <div class="link-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
              </div>
              <span>联系我们</span>
            </a>
          </div>
        </div>

        <!-- 推荐产品 -->
        {%- if settings.show_404_products and collections.all.products.size > 0 -%}
          <div class="error-products">
            <h3 class="products-title">推荐产品</h3>
            <div class="products-grid-404">
              {%- assign featured_products = collections.all.products | sample: 4 -%}
              {%- for product in featured_products -%}
                <div class="product-card-404">
                  <a href="{{ product.url }}" class="product-link-404">
                    <div class="product-image-404">
                      {% if product.featured_image %}
                        <img src="{{ product.featured_image | image_url: width: 300, height: 300 }}"
                             alt="{{ product.featured_image.alt | default: product.title | escape }}"
                             loading="lazy"
                             class="product-img-404">
                      {% else %}
                        {{ 'product-1' | placeholder_svg_tag: 'product-img-404 placeholder' }}
                      {% endif %}
                    </div>
                    <div class="product-info-404">
                      <h4 class="product-title-404">{{ product.title }}</h4>
                      <p class="product-price-404">{{ product.price | money }}</p>
                    </div>
                  </a>
                </div>
              {%- endfor -%}
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>

  <!-- 背景动画元素 -->
  <div class="error-background">
    <div class="floating-shapes">
      <div class="shape shape-1"></div>
      <div class="shape shape-2"></div>
      <div class="shape shape-3"></div>
      <div class="shape shape-4"></div>
      <div class="shape shape-5"></div>
    </div>
    <div class="error-grid"></div>
  </div>
</div>

<style>
/* 404页面主样式 */
.page-404 {
  min-height: 80vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-12) 0;
  position: relative;
  overflow: hidden;
}

.page-404-content {
  text-align: center;
  position: relative;
  z-index: 10;
}

/* 错误代码显示 */
.error-code {
  display: flex;
  justify-content: center;
  margin-bottom: var(--spacing-8);
  position: relative;
}

.error-number {
  font-family: var(--font-family-heading);
  font-size: 10rem;
  font-weight: var(--font-weight-bold);
  color: var(--color-text-primary);
  text-shadow: 0 0 30px var(--glow-primary);
  animation: error-number-pulse 2s ease-in-out infinite;
  position: relative;
  display: inline-block;
  margin: 0 -10px;
}

.error-number-4 {
  animation-delay: 0s;
  color: var(--color-secondary);
}

.error-number-0 {
  animation-delay: 0.3s;
  transform: scale(1.1);
  color: var(--color-accent);
}

.error-number-4:last-child {
  animation-delay: 0.6s;
}

@keyframes error-number-pulse {
  0%, 100% {
    transform: translateY(0) scale(1);
    opacity: 1;
  }
  50% {
    transform: translateY(-10px) scale(1.05);
    opacity: 0.8;
  }
}

/* 错误信息内容 */
.error-content {
  max-width: 600px;
  margin: 0 auto;
}

.error-title {
  font-size: clamp(2.5rem, 8vw, 4rem); /* 大幅增加标题字体 */
  font-weight: var(--font-weight-bold);
  margin-bottom: var(--spacing-6);
  color: var(--color-text-primary);
  text-shadow: 0 0 20px var(--glow-secondary);
  line-height: 1.2;
}

.error-description {
  font-size: clamp(1.125rem, 3vw, 1.5rem); /* 增加描述字体 */
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-8);
  line-height: var(--line-height-relaxed);
}

/* 404搜索表单 */
.error-search {
  margin-bottom: var(--spacing-12);
}

.search-form-404 {
  max-width: 500px;
  margin: 0 auto;
}

.search-field-404 {
  display: flex;
  gap: var(--spacing-4);
  padding: var(--spacing-4); /* 增加内边距 */
  background: rgba(255, 255, 255, 0.1);
  border: 2px solid rgba(135, 206, 235, 0.3);
  border-radius: var(--radius-xl);
  backdrop-filter: blur(10px);
  transition: all var(--duration-normal) var(--ease-sci-fi);

  &:focus-within {
    border-color: var(--color-secondary);
    box-shadow: 0 0 20px var(--glow-primary);
  }
}

.search-input-404 {
  flex: 1;
  padding: var(--spacing-4);
  background: transparent;
  border: none;
  color: var(--color-text-primary);
  font-size: clamp(1rem, 2.5vw, 1.25rem); /* 增加输入框字体 */
  outline: none;

  &::placeholder {
    color: var(--color-text-light);
  }
}

.search-btn-404 {
  flex-shrink: 0;
  padding: var(--spacing-4) var(--spacing-6); /* 增加按钮内边距 */
  font-size: clamp(0.875rem, 2vw, 1rem); /* 增加按钮字体 */

  /* 404搜索按钮专用样式 - 蓝色背景白色文字 */
  background: var(--color-secondary); /* 天空蓝背景 */
  color: var(--color-text-inverse); /* 白色文字 */
  border: 2px solid var(--color-secondary);
  border-radius: var(--radius-lg);
  font-weight: var(--font-weight-semibold);
  cursor: pointer;
  transition: all var(--duration-normal) var(--ease-sci-fi);
  position: relative;
  overflow: hidden;
  box-shadow: 0 0 20px rgba(135, 206, 235, 0.3); /* 蓝色发光效果 */

  /* 悬停效果 */
  &:hover {
    /* 保持原有蓝色背景不变，只改变其他属性 */
    border-color: var(--color-primary);
    transform: translateY(-2px) scale(1.05);
    box-shadow:
      0 8px 25px rgba(135, 206, 235, 0.6),
      0 0 35px var(--glow-primary); /* 增强发光效果 */
  }

  /* 点击效果 */
  &:active {
    transform: translateY(0) scale(0.98);
    box-shadow:
      0 4px 15px rgba(135, 206, 235, 0.4),
      0 0 20px var(--glow-primary);
  }

  /* 聚焦状态 */
  &:focus {
    outline: 2px solid var(--color-secondary);
    outline-offset: 2px;
    box-shadow:
      0 0 0 4px rgba(135, 206, 235, 0.2),
      0 0 20px var(--glow-primary);
  }

  /* 禁用状态 */
  &:disabled {
    background: var(--color-border);
    border-color: var(--color-border);
    color: var(--color-text-light);
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
  }
}

/* 快速链接 */
.error-links {
  margin-bottom: var(--spacing-12);
}

.links-title {
  font-size: clamp(1.5rem, 4vw, 2rem); /* 增加链接标题字体 */
  font-weight: var(--font-weight-semibold);
  margin-bottom: var(--spacing-6);
  color: var(--color-text-primary);
}

.links-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--spacing-4);
  max-width: 800px;
  margin: 0 auto;
}

.link-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-8) var(--spacing-6); /* 增加卡片内边距 */
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(135, 206, 235, 0.2);
  border-radius: var(--radius-lg);
  color: var(--color-text-primary);
  text-decoration: none;
  transition: all var(--duration-normal) var(--ease-sci-fi);
  position: relative;
  overflow: hidden;
  font-size: clamp(1rem, 2.5vw, 1.25rem); /* 增加链接文字大小 */

  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(135, 206, 235, 0.2), transparent);
    transition: left var(--duration-slow) var(--ease-out);
  }

  &:hover {
    transform: translateY(-4px);
    border-color: var(--color-secondary);
    box-shadow: 0 8px 20px var(--shadow-large);
    color: var(--color-secondary);

    &::before {
      left: 100%;
    }
  }
}

.link-icon {
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(135, 206, 235, 0.1);
  border-radius: var(--radius-full);
  margin-bottom: var(--spacing-3);
  border: 1px solid rgba(135, 206, 235, 0.3);
  transition: all var(--duration-normal) var(--ease-sci-fi);
}

.link-card:hover .link-icon {
  background: var(--color-secondary);
  color: var(--color-bg-dark);
  box-shadow: 0 0 15px var(--glow-primary);
}

/* 推荐产品 */
.error-products {
  margin-top: var(--spacing-12);
}

.products-title {
  font-size: clamp(1.5rem, 4vw, 2rem); /* 增加产品标题字体 */
  font-weight: var(--font-weight-semibold);
  margin-bottom: var(--spacing-6);
  color: var(--color-text-primary);
}

.products-grid-404 {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--spacing-6);
  max-width: 900px;
  margin: 0 auto;
}

.product-card-404 {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(135, 206, 235, 0.2);
  border-radius: var(--radius-lg);
  overflow: hidden;
  transition: all var(--duration-normal) var(--ease-sci-fi);
}

.product-card-404:hover {
  transform: translateY(-4px);
  border-color: var(--color-secondary);
  box-shadow: 0 8px 20px var(--shadow-large);
}

.product-link-404 {
  display: block;
  color: inherit;
  text-decoration: none;
}

.product-image-404 {
  aspect-ratio: 1;
  overflow: hidden;
  background: var(--color-bg-secondary);
}

.product-img-404 {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform var(--duration-normal) var(--ease-sci-fi);
}

.product-card-404:hover .product-img-404 {
  transform: scale(1.05);
}

.product-info-404 {
  padding: var(--spacing-6); /* 增加产品信息内边距 */
}

.product-title-404 {
  font-size: clamp(1rem, 2.5vw, 1.25rem); /* 增加产品标题字体 */
  font-weight: var(--font-weight-medium);
  margin-bottom: var(--spacing-2);
  color: var(--color-text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-price-404 {
  font-size: clamp(1.125rem, 3vw, 1.5rem); /* 增加产品价格字体 */
  font-weight: var(--font-weight-semibold);
  color: var(--color-secondary);
}

/* 背景动画 */
.error-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  pointer-events: none;
}

.error-grid {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image:
    linear-gradient(rgba(135, 206, 235, 0.1) 1px, transparent 1px),
    linear-gradient(90deg, rgba(135, 206, 235, 0.1) 1px, transparent 1px);
  background-size: 60px 60px;
  animation: grid-move 10s linear infinite;
}

@keyframes grid-move {
  0% { transform: translate(0, 0); }
  100% { transform: translate(60px, 60px); }
}

.floating-shapes {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.shape {
  position: absolute;
  border-radius: 50%;
  opacity: 0.3;
}

.shape-1 {
  width: 80px;
  height: 80px;
  background: var(--color-secondary);
  top: 10%;
  left: 10%;
  animation: float-1 6s ease-in-out infinite;
}

.shape-2 {
  width: 60px;
  height: 60px;
  background: var(--color-accent);
  top: 70%;
  left: 20%;
  animation: float-2 8s ease-in-out infinite;
}

.shape-3 {
  width: 100px;
  height: 100px;
  background: var(--color-secondary);
  top: 30%;
  right: 15%;
  animation: float-3 7s ease-in-out infinite;
}

.shape-4 {
  width: 40px;
  height: 40px;
  background: var(--color-accent);
  top: 60%;
  right: 25%;
  animation: float-4 9s ease-in-out infinite;
}

.shape-5 {
  width: 120px;
  height: 120px;
  background: var(--color-secondary);
  bottom: 10%;
  left: 50%;
  animation: float-5 10s ease-in-out infinite;
}

@keyframes float-1 {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  33% { transform: translate(30px, -30px) rotate(120deg); }
  66% { transform: translate(-20px, 20px) rotate(240deg); }
}

@keyframes float-2 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(-40px, 30px) scale(1.2); }
}

@keyframes float-3 {
  0%, 100% { transform: translate(0, 0); }
  50% { transform: translate(40px, -40px); }
}

@keyframes float-4 {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  25% { transform: translate(30px, 20px) rotate(90deg); }
  50% { transform: translate(-20px, 40px) rotate(180deg); }
  75% { transform: translate(-40px, -30px) rotate(270deg); }
}

@keyframes float-5 {
  0%, 100% { transform: translate(0, 0) scale(1) rotate(0deg); }
  50% { transform: translate(-60px, 60px) scale(0.8) rotate(180deg); }
}

/* 响应式设计 */
@media (max-width: 768px) {
  .error-number {
    font-size: 5rem;
    margin: 0 -5px;
  }

  .error-title {
    font-size: clamp(2rem, 6vw, 2.5rem); /* 移动端仍然保持较大字体 */
  }

  .error-description {
    font-size: clamp(1rem, 3vw, 1.25rem); /* 移动端描述文字 */
  }

  .search-field-404 {
    flex-direction: column;
    padding: var(--spacing-4);
  }

  .search-input-404 {
    font-size: clamp(0.875rem, 2.5vw, 1rem); /* 移动端输入框 */
  }

  .search-btn-404 {
    font-size: clamp(0.875rem, 2.5vw, 1rem); /* 移动端按钮 */
    padding: var(--spacing-3) var(--spacing-4);
  }

  .links-title {
    font-size: clamp(1.25rem, 3.5vw, 1.5rem);
  }

  .links-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-3);
  }

  .link-card {
    padding: var(--spacing-6) var(--spacing-4);
    font-size: clamp(0.875rem, 2.5vw, 1rem);
  }

  .products-title {
    font-size: clamp(1.25rem, 3.5vw, 1.5rem);
  }

  .products-grid-404 {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-4);
  }

  .product-title-404 {
    font-size: clamp(0.875rem, 2.5vw, 1rem);
  }

  .product-price-404 {
    font-size: clamp(1rem, 2.5vw, 1.125rem);
  }

  .page-404 {
    min-height: 70vh;
    padding: var(--spacing-8) 0;
  }
}

@media (max-width: 480px) {
  .error-number {
    font-size: 3.5rem;
  }

  .error-title {
    font-size: clamp(1.75rem, 5vw, 2rem);
  }

  .error-description {
    font-size: clamp(0.875rem, 2.5vw, 1.125rem);
  }

  .links-grid {
    grid-template-columns: 1fr;
  }

  .products-grid-404 {
    grid-template-columns: 1fr;
  }

  .link-card {
    padding: var(--spacing-5) var(--spacing-4);
    font-size: clamp(0.875rem, 2vw, 1rem);
  }
}

/* 减少动画 */
@media (prefers-reduced-motion: reduce) {
  .error-number,
  .shape,
  .error-grid {
    animation: none;
  }

  .link-card::before {
    transition: none;
  }

  .product-card-404:hover .product-img-404 {
    transform: none;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // 添加交互效果
  const errorNumbers = document.querySelectorAll('.error-number');

  errorNumbers.forEach((number, index) => {
    number.addEventListener('mouseenter', function() {
      this.style.transform = 'scale(1.2) rotate(10deg)';
      this.style.textShadow = '0 0 40px var(--glow-hover)';
    });

    number.addEventListener('mouseleave', function() {
      this.style.transform = '';
      this.style.textShadow = '';
    });
  });

  // 键盘导航支持
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Enter' || e.key === ' ') {
      const focusedElement = document.activeElement;
      if (focusedElement.classList.contains('link-card')) {
        focusedElement.click();
      }
    }
  });
});
</script>