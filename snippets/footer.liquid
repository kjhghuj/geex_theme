<script>
document.addEventListener('DOMContentLoaded', function() {
  // 返回顶部按钮
  const backToTopBtn = document.querySelector('[data-back-to-top]');

  if (backToTopBtn) {
    window.addEventListener('scroll', function() {
      if (window.pageYOffset > 300) {
        backToTopBtn.classList.add('visible');
      } else {
        backToTopBtn.classList.remove('visible');
      }
    });

    backToTopBtn.addEventListener('click', function() {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });
  }

  // 页脚装饰效果
  const footer = document.querySelector('.site-footer');
  const scifiGrid = footer.querySelector('.scifi-grid');

  if (scifiGrid && window.matchMedia('(prefers-reduced-motion: no-preference)').matches) {
    let mouseX = 0;
    let mouseY = 0;

    document.addEventListener('mousemove', function(e) {
      mouseX = e.clientX;
      mouseY = e.clientY;

      const rect = footer.getBoundingClientRect();
      const isInFooter = mouseY >= rect.top;

      if (isInFooter) {
        const xPercent = (mouseX / window.innerWidth) * 100;
        const yPercent = ((mouseY - rect.top) / rect.height) * 100;

        scifiGrid.style.transform = `translate(${xPercent * 0.05}px, ${yPercent * 0.05}px)`;
      }
    });
  }
});
</script>