{%- comment -%}
  科幻主题页脚组件
  包含多栏布局、社交媒体链接和订阅表单
{%- endcomment -%}

<footer class="site-footer" role="contentinfo">
  <!-- 页脚主要内容 -->
  <div class="footer-main">
    <div class="container">
      <div class="footer-grid">
        <!-- 公司信息 -->
        {%- if section.settings.show_company_info -%}
          <div class="footer-column footer-company">
            <div class="footer-logo">
              {%- if section.settings.footer_logo != blank -%}
                <img src="{{ section.settings.footer_logo | image_url: width: 200, height: 60 }}"
                     alt="{{ shop.name | escape }}"
                     class="footer-logo-image"
                     loading="lazy">
              {%- else -%}
                <h3 class="footer-logo-text scifi-gradient-text">{{ shop.name }}</h3>
              {%- endif -%}
            </div>

            {%- if section.settings.footer_description != blank -%}
              <div class="footer-description">
                <p>{{ section.settings.footer_description }}</p>
              </div>
            {%- endif -%}

            {%- if section.settings.show_contact_info -%}
              <div class="footer-contact">
                {%- if section.settings.contact_phone != blank -%}
                  <div class="contact-item">
                    <svg class="contact-icon" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                      <path d="M3 2a2 2 0 0 0-2 2v1.161l8.441 4.221a1.25 1.25 0 0 0 1.118 0L19 5.162V4a2 2 0 0 0-2-2H3Zm0 3.839V14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V5.839l-7.778 3.889a2.75 2.75 0 0 1-2.444 0L3 5.839Z"/>
                    </svg>
                    <a href="tel:{{ section.settings.contact_phone | replace: ' ', '' | replace: '-', '' }}">{{ section.settings.contact_phone }}</a>
                  </div>
                {%- endif -%}

                {%- if section.settings.contact_email != blank -%}
                  <div class="contact-item">
                    <svg class="contact-icon" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                      <path d="M2 2a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H2Zm13.364 2.464a1 1 0 0 0-1.415-1.414l-2.828 2.829a1 1 0 0 0 1.415 1.414l2.828-2.829ZM3.364 4.464a1 1 0 1 1 1.415 1.414L3.05 7.193A1 1 0 1 1 1.636 5.778l1.728-1.314Z"/>
                    </svg>
                    <a href="mailto:{{ section.settings.contact_email }}">{{ section.settings.contact_email }}</a>
                  </div>
                {%- endif -%}

                {%- if section.settings.contact_address != blank -%}
                  <div class="contact-item contact-address">
                    <svg class="contact-icon" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                      <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
                    </svg>
                    <span>{{ section.settings.contact_address }}</span>
                  </div>
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}

        <!-- 快速链接 -->
        {%- assign footer_linklist = section.settings.footer_menu -%}
        {%- if linklists[footer_linklist].links.size > 0 -%}
          <div class="footer-column footer-links">
            <h3 class="footer-heading">{{ linklists[footer_linklist].title }}</h3>
            <ul class="footer-nav">
              {%- for link in linklists[footer_linklist].links -%}
                <li>
                  <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        <!-- 客户服务 -->
        {%- assign service_linklist = section.settings.service_menu -%}
        {%- if linklists[service_linklist].links.size > 0 -%}
          <div class="footer-column footer-services">
            <h3 class="footer-heading">{{ linklists[service_linklist].title }}</h3>
            <ul class="footer-nav">
              {%- for link in linklists[service_linklist].links -%}
                <li>
                  <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        <!-- 订阅表单 -->
        {%- if section.settings.show_newsletter -%}
          <div class="footer-column footer-newsletter">
            <h3 class="footer-heading">{{ 'general.newsletter.title' | t }}</h3>
            {%- if section.settings.newsletter_description -%}
              <p class="newsletter-description">{{ section.settings.newsletter_description }}</p>
            {%- endif -%}

            <form class="newsletter-form" action="{{ routes.root_url }}/contact#ContactFooter" method="post" id="ContactFooter" accept-charset="UTF-8">
              <input type="hidden" name="form_type" value="customer">
              <input type="hidden" name="utf8" value="✓">
              <input type="hidden" name="contact[tags]" value="newsletter">

              <div class="newsletter-field">
                <input type="email"
                       name="contact[email]"
                       id="NewsletterEmail--{{ section.id }}"
                       placeholder="{{ 'general.newsletter.email_placeholder' | t }}"
                       value="{{ form.email }}"
                       required
                       class="newsletter-input">
                <button type="submit" class="newsletter-submit btn btn-primary" name="commit">
                  {%- if section.settings.newsletter_button_text != blank -%}
                    {{ section.settings.newsletter_button_text }}
                  {%- else -%}
                    {{ 'general.newsletter.subscribe' | t }}
                  {%- endif -%}
                </button>
              </div>

              {%- if form.posted_successfully? -%}
                <div class="newsletter-success">
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  {{ 'general.newsletter.success' | t }}
                </div>
              {%- endif -%}

              {%- if form.errors -%}
                <div class="newsletter-error">
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                  </svg>
                  {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
                </div>
              {%- endif -%}
            </form>

            <!-- 社交媒体链接 -->
            {%- if section.settings.show_social_media -%}
              <div class="footer-social">
                <h4 class="social-heading">{{ 'general.social.title' | t }}</h4>
                <div class="social-links">
                  {%- if settings.social_twitter_link != blank -%}
                    <a href="{{ settings.social_twitter_link }}"
                       class="social-link"
                       aria-label="Twitter"
                       target="_blank"
                       rel="noopener">
                      <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"/>
                      </svg>
                    </a>
                  {%- endif -%}

                  {%- if settings.social_facebook_link != blank -%}
                    <a href="{{ settings.social_facebook_link }}"
                       class="social-link"
                       aria-label="Facebook"
                       target="_blank"
                       rel="noopener">
                      <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M20 10C20 4.477 15.523 0 10 0S0 4.477 0 10c0 4.991 3.657 9.128 8.438 9.879v-6.988h-2.54V10h2.54V7.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V10h2.773l-.443 2.89h-2.33v6.988C16.343 19.129 20 14.99 20 10z" clip-rule="evenodd"/>
                      </svg>
                    </a>
                  {%- endif -%}

                  {%- if settings.social_instagram_link != blank -%}
                    <a href="{{ settings.social_instagram_link }}"
                       class="social-link"
                       aria-label="Instagram"
                       target="_blank"
                       rel="noopener">
                      <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"/>
                      </svg>
                    </a>
                  {%- endif -%}

                  {%- if settings.social_youtube_link != blank -%}
                    <a href="{{ settings.social_youtube_link }}"
                       class="social-link"
                       aria-label="YouTube"
                       target="_blank"
                       rel="noopener">
                      <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M2.166 4.999A11.854 11.854 0 0010 14.836c1.905 0 3.7-.448 5.29-1.244l1.908 1.908a2 2 0 102.828-2.828l-1.908-1.908A11.834 11.834 0 002.166 4.999zM11 5a1 1 0 10-2 0v1.586L7.707 4.293a1 1 0 00-1.414 1.414L8.586 8H7a1 1 0 100 2h1.586l-2.293 2.293a1 1 0 101.414 1.414L10 9.414V11a1 1 0 102 0V9.414l2.293 2.293a1 1 0 001.414-1.414L12.414 8H14a1 1 0 100-2h-1.586l2.293-2.293a1 1 0 00-1.414-1.414L11 6.586V5z" clip-rule="evenodd"/>
                      </svg>
                    </a>
                  {%- endif -%}

                  {%- if settings.social_linkedin_link != blank -%}
                    <a href="{{ settings.social_linkedin_link }}"
                       class="social-link"
                       aria-label="LinkedIn"
                       target="_blank"
                       rel="noopener">
                      <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd"/>
                      </svg>
                    </a>
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>

  <!-- 页脚底部 -->
  <div class="footer-bottom">
    <div class="container">
      <div class="footer-bottom-content">
        <div class="footer-copyright">
          <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name | link_to: routes.root_url }}. {{ 'layout.footer.copyright' | t }}</p>
        </div>

        <div class="footer-bottom-links">
          {%- if section.settings.show_payment_methods -%}
            <div class="payment-methods">
              <span class="payment-label">{{ 'layout.footer.accepted_payments' | t }}</span>
              <ul class="payment-icons">
                {%- for type in shop.enabled_payment_types -%}
                  <li class="payment-icon">
                    {{ type | payment_type_svg_tag: class: 'icon' }}
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          {%- endif -%}

          {%- assign powered_linklist = section.settings.powered_by_menu -%}
          {%- if linklists[powered_linklist].links.size > 0 -%}
            <ul class="powered-links">
              {%- for link in linklists[powered_linklist].links -%}
                <li>
                  <a href="{{ link.url }}" class="powered-link">{{ link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>

  <!-- 科幻装饰元素 -->
  <div class="footer-scifi-decoration">
    <div class="scifi-grid"></div>
    <div class="scifi-glow"></div>
  </div>

  <!-- 返回顶部按钮 -->
  <button class="back-to-top btn btn-glow btn-circle"
          type="button"
          aria-label="{{ 'layout.footer.back_to_top' | t }}"
          data-back-to-top>
    <svg class="btn__icon" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
      <path fill-rule="evenodd" d="M8 10a.5.5 0 0 0 .5-.5V3.707l2.146 2.147a.5.5 0 0 0 .708-.708l-3-3a.5.5 0 0 0-.708 0l-3 3a.5.5 0 1 0 .708.708L7.5 3.707V9.5a.5.5 0 0 0 .5.5z" clip-rule="evenodd"/>
    </svg>
  </button>
</footer>

<style>
/* 页脚基础样式 */
.site-footer {
  background: linear-gradient(135deg, var(--color-bg-dark) 0%, #2a2a2a 100%);
  color: var(--color-text-inverse);
  position: relative;
  overflow: hidden;
  margin-top: auto;
}

/* 页脚主要内容 */
.footer-main {
  padding: var(--spacing-16) 0;
  position: relative;
  z-index: 2;
}

.footer-grid {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr 1.5fr;
  gap: var(--spacing-12);
}

/* 页脚列 */
.footer-column {
  position: relative;
}

.footer-heading {
  font-family: var(--font-family-heading);
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  margin-bottom: var(--spacing-6);
  color: var(--color-secondary);
  letter-spacing: var(--letter-spacing-wide);
  text-transform: uppercase;
  position: relative;

  &::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 40px;
    height: 2px;
    background: var(--gradient-sci-fi);
    border-radius: var(--radius-full);
    box-shadow: 0 0 8px var(--glow-primary);
  }
}

/* 公司信息 */
.footer-logo {
  margin-bottom: var(--spacing-6);
}

.footer-logo-image {
  max-width: 200px;
  height: auto;
}

.footer-logo-text {
  font-family: var(--font-family-heading);
  font-size: var(--font-size-2xl);
  font-weight: var(--font-weight-bold);
  margin: 0;
  text-shadow: 0 0 15px var(--glow-secondary);
}

.footer-description {
  margin-bottom: var(--spacing-6);
  color: var(--color-text-light);
  line-height: var(--line-height-relaxed);
}

.footer-contact {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-3);
}

.contact-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-3);
  color: var(--color-text-light);
  font-size: var(--font-size-sm);
  transition: color var(--duration-normal) var(--ease-out);

  a {
    color: inherit;
    text-decoration: none;
    transition: color var(--duration-normal) var(--ease-out);

    &:hover {
      color: var(--color-secondary);
      text-shadow: 0 0 6px var(--glow-primary);
    }
  }
}

.contact-icon {
  width: 16px;
  height: 16px;
  opacity: 0.8;
  flex-shrink: 0;
}

.contact-address {
  align-items: flex-start;
  line-height: var(--line-height-relaxed);
}

/* 导航链接 */
.footer-nav {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-3);
}

.footer-link {
  color: var(--color-text-light);
  text-decoration: none;
  font-size: var(--font-size-sm);
  transition: all var(--duration-normal) var(--ease-sci-fi);
  position: relative;
  padding-left: var(--spacing-4);

  &::before {
    content: '▸';
    position: absolute;
    left: 0;
    color: var(--color-secondary);
    opacity: 0;
    transform: translateX(-5px);
    transition: all var(--duration-normal) var(--ease-sci-fi);
  }

  &:hover {
    color: var(--color-secondary);
    padding-left: var(--spacing-6);
    text-shadow: 0 0 6px var(--glow-primary);

    &::before {
      opacity: 1;
      transform: translateX(0);
    }
  }
}

/* 订阅表单 */
.newsletter-description {
  margin-bottom: var(--spacing-4);
  color: var(--color-text-light);
  font-size: var(--font-size-sm);
}

.newsletter-form {
  margin-bottom: var(--spacing-6);
}

.newsletter-field {
  display: flex;
  gap: var(--spacing-2);
  margin-bottom: var(--spacing-4);
}

.newsletter-input {
  flex: 1;
  padding: var(--spacing-3) var(--spacing-4);
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(135, 206, 235, 0.3);
  border-radius: var(--radius-lg);
  color: var(--color-text-inverse);
  font-size: var(--font-size-sm);
  transition: all var(--duration-normal) var(--ease-sci-fi);

  &::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }

  &:focus {
    outline: none;
    border-color: var(--color-secondary);
    background: rgba(255, 255, 255, 0.15);
    box-shadow: 0 0 0 2px var(--glow-secondary);
  }
}

.newsletter-submit {
  white-space: nowrap;
  flex-shrink: 0;
}

/* 表单反馈 */
.newsletter-success,
.newsletter-error {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
  padding: var(--spacing-3);
  border-radius: var(--radius-base);
  font-size: var(--font-size-sm);
  margin-bottom: var(--spacing-4);
}

.newsletter-success {
  background: rgba(40, 167, 69, 0.2);
  color: #90ee90;
  border: 1px solid rgba(40, 167, 69, 0.4);
}

.newsletter-error {
  background: rgba(220, 53, 69, 0.2);
  color: #ff9a9a;
  border: 1px solid rgba(220, 53, 69, 0.4);
}

/* 社交媒体 */
.footer-social {
  margin-top: var(--spacing-6);
}

.social-heading {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  margin-bottom: var(--spacing-4);
  text-transform: uppercase;
  letter-spacing: var(--letter-spacing-wide);
  color: var(--color-text-light);
}

.social-links {
  display: flex;
  gap: var(--spacing-3);
}

.social-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(135, 206, 235, 0.3);
  border-radius: var(--radius-full);
  color: var(--color-text-light);
  text-decoration: none;
  transition: all var(--duration-normal) var(--ease-sci-fi);

  &:hover {
    background: var(--color-secondary);
    color: var(--color-bg-dark);
    border-color: var(--color-secondary);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px var(--glow-primary);
  }
}

/* 页脚底部 */
.footer-bottom {
  background: rgba(0, 0, 0, 0.3);
  border-top: 1px solid rgba(135, 206, 235, 0.2);
  padding: var(--spacing-6) 0;
  position: relative;
  z-index: 2;
}

.footer-bottom-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: var(--spacing-4);
}

.footer-copyright {
  font-size: var(--font-size-sm);
  color: var(--color-text-light);

  a {
    color: var(--color-secondary);
    text-decoration: none;

    &:hover {
      text-shadow: 0 0 6px var(--glow-primary);
    }
  }
}

.footer-bottom-links {
  display: flex;
  align-items: center;
  gap: var(--spacing-6);
}

/* 支付方式 */
.payment-methods {
  display: flex;
  align-items: center;
  gap: var(--spacing-4);
}

.payment-label {
  font-size: var(--font-size-xs);
  color: var(--color-text-light);
  text-transform: uppercase;
  letter-spacing: var(--letter-spacing-wide);
}

.payment-icons {
  display: flex;
  gap: var(--spacing-2);
  list-style: none;
  margin: 0;
  padding: 0;
}

.payment-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 24px;
  opacity: 0.7;
  transition: opacity var(--duration-normal) var(--ease-out);

  &:hover {
    opacity: 1;
  }

  .icon {
    width: 100%;
    height: auto;
  }
}

/* 其他链接 */
.powered-links {
  display: flex;
  gap: var(--spacing-4);
  list-style: none;
  margin: 0;
  padding: 0;
}

.powered-link {
  font-size: var(--font-size-xs);
  color: var(--color-text-light);
  text-decoration: none;
  transition: color var(--duration-normal) var(--ease-out);

  &:hover {
    color: var(--color-secondary);
  }
}

/* 科幻装饰元素 */
.footer-scifi-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
}

.scifi-grid {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image:
    linear-gradient(rgba(135, 206, 235, 0.1) 1px, transparent 1px),
    linear-gradient(90deg, rgba(135, 206, 235, 0.1) 1px, transparent 1px);
  background-size: 50px 50px;
  opacity: 0.3;
}

.scifi-glow {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
